<!DOCTYPE html>
<html ng-app="urlShortenerModule">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Styles.Render("~/Content/kendo/styles/kendo-bootstrap-default")

</head>
<body ng-app="ModuleHotLine"  ng-controller="appCtrl"
      ng-init="init({urlShortenerWebAPIURL:'@ViewBag.urlShortenerWebAPIURL', isAdmin: @Json.Encode(User.IsInRole("Admin")) })">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("URL Shortener", "Index", "ShortenUrl", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>*@
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @if (IsSectionDefined("footer"))
        {
            @RenderSection("footer", false)
        }
        else
        {
            <hr />
            <footer>
                <p>&copy; Copyright © @DateTime.Now.Year Url Shortener, All rights reserved. (888) 508-8425</p>
            </footer>
        }        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")
    @RenderSection("scripts", required: false)
</body>
</html>
